<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity">

    <ImageView
        android:layout_margin="15dp"
        android:id="@+id/retrofit_logo"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/retrofit_logo_round"
        />

    <Button
        android:layout_below="@id/retrofit_logo"
        android:id="@+id/load_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load All Data"/>

    <EditText
        android:layout_below="@id/load_all_btn"
        android:id="@+id/single_load_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Id here"
        />

    <Button
        android:layout_below="@id/single_load_edittext"
        android:id="@+id/load_single_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Data"/>



    <ScrollView
        android:layout_below="@id/load_single_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/data_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Load Data!"
            android:textSize="15dp"


            />

    </ScrollView>

</RelativeLayout>